<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PowerGuard"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: Monitoring"
        android:textColor="#E0E0E0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/widget_loading_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/widget_loading"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_summary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/widget_summary"
        android:textColor="#E0E0E0"
        android:textSize="14sp" />

    <Button
        android:id="@+id/widget_optimize_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_optimize_now" />

    <!-- Button Row for Save Battery and Save Data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        
        <Button
            android:id="@+id/widget_save_battery_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/widget_save_battery" />
            
        <Button
            android:id="@+id/widget_save_data_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="@string/widget_save_data" />
    </LinearLayout>
    
    <!-- Prompt Row for input and send button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        
        <TextView
            android:id="@+id/widget_prompt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/widget_prompt_hint"
            android:background="@drawable/text_input_background"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout> 